<form>
  <div class="mb-6">
    <label for="name" class="block text-[0.75rem] tracking-[0.15em] uppercase text-gray-light mb-2 font-medium">
      Imię i nazwisko
    </label>
    <input
      type="text"
      id="name"
      placeholder="Twoje imię i nazwisko"
      class="w-full p-4 border border-gray-lighter font-body text-[0.95rem] text-black bg-transparent outline-none transition-all focus:border-black"
    />
  </div>
  <div class="mb-6">
    <label for="email" class="block text-[0.75rem] tracking-[0.15em] uppercase text-gray-light mb-2 font-medium">
      E-mail
    </label>
    <input
      type="email"
      id="email"
      placeholder="Twój adres e-mail"
      class="w-full p-4 border border-gray-lighter font-body text-[0.95rem] text-black bg-transparent outline-none transition-all focus:border-black"
    />
  </div>
  <div class="mb-6">
    <label for="phone" class="block text-[0.75rem] tracking-[0.15em] uppercase text-gray-light mb-2 font-medium">
      Telefon
    </label>
    <input
      type="tel"
      id="phone"
      placeholder="Twój numer telefonu"
      class="w-full p-4 border border-gray-lighter font-body text-[0.95rem] text-black bg-transparent outline-none transition-all focus:border-black"
    />
  </div>
  <div class="mb-6">
    <label for="message" class="block text-[0.75rem] tracking-[0.15em] uppercase text-gray-light mb-2 font-medium">
      Wiadomość
    </label>
    <textarea
      id="message"
      placeholder="Treść wiadomości..."
      class="w-full p-4 border border-gray-lighter font-body text-[0.95rem] text-black bg-transparent outline-none transition-all focus:border-black h-[150px] resize-y"
    ></textarea>
  </div>
  <button
    type="submit"
    class="inline-block px-10 py-4 bg-black text-white font-body text-[0.85rem] font-medium tracking-[0.15em] uppercase cursor-pointer border-none transition-all hover:bg-gray-dark hover:-translate-y-[2px] hover:shadow-md"
  >
    Wyślij wiadomość
  </button>
</form>
